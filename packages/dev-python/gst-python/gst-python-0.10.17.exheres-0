require python [ python_dep=2.4 ]

SUMMARY="GStreamer Python bindings"
HOMEPAGE="http://gstreamer.freedesktop.org/"
DOWNLOADS="http://gstreamer.freedesktop.org/src/${PN}/${PNV}.tar.bz2"

LICENCES="LGPL-2"
SLOT="0.10"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-libs/libxml2
        media-libs/gstreamer:0.10[>=0.10.21]
        media-plugins/gst-plugins-base:0.10[>=0.10.21]
        || (
            gnome-bindings/pygobject:2[>=2.11.2]
            gnome-bindings/pygtk:2[>=2.6.3]
        )
"

# Tests broken with Python 2.6 and current GObject API
RESTRICT="test"

src_prepare() {
    # Let python_mod_optimize handle byte compiling in pkg_postinst()
    rm -f py-compile || die "rm -f py-compile failed"
    ln -s $(type -P true) py-compile || die "ln -s \$(type -P true) py-compile failed"
}

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}"/gst-python-0.10.9-lazy.patch )

pkg_postinst() {
    python_mod_optimize $(python_get_sitedir)
}

pkg_postrm() {
    python_mod_cleanup
}

