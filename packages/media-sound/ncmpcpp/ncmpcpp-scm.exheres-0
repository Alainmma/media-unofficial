SCM_REPOSITORY="git://repo.or.cz/ncmpcpp.git"
require ncmpcpp scm-git

PLATFORMS="~amd64"

src_prepare() {
    default
    sed -i \
        -e "s:\(docdir.*\):\1-scm:" \
        -e ":^doc_DATA:s:COPYING::" \
        Makefile.am || die "sed in Makefile.am failed"
    NOCONFIGURE=1 ./autogen.sh || die "autogen.sh failed"
}
